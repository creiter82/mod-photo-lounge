<div class="col-sm-8">  

  <h1>New Event</h1>

  <% if @event.errors.any? %>
    <div class="alert alert-danger">
      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= render 'form', event: @event %>

  <%= link_to 'Back', events_path %>

</div>  